# Directories
APP_DIR=./apps/Deep-Live-Cam_dockerized
STARTUP_SCRIPT=./docker_script.sh
MODELS_DIR=./models
OUTPUT_DIR=./output # Output directory for all files generated by the container (e.g. processed images, videos, etc.)

SOURCE_FOLDER=./output/sources
TARGET_FOLDER=./output/targets
OUTPUT_FOLDER=./output/processed

# Ports
PORT=8050  #Externally used by the host machine (whichs would need to be accepted by the firewall)
CONTAINER_PORT=8050 #Internally used by the container application

# Processor Settings
SERVER_ONLY=false # If true, the container will wait for files to be sent from the Go application: https://github.com/luna-nightbyte/GoMediaFlow
MANY_FACES=true
FRAME_PROCESSOR=face_swapper

# Performance Settings
MAX_MEM=8
THREADS=2
KEEP_AUDIO=true
# Video Settings
USE_VIDEO_ARGS=false
VIDEO_QUALITY=0
VIDEO_ENCODER=libx265
KEEP_FPS=true

# GPU
USE_GPU=true
RUNTIME=cuda
GPU_COUNT=1

# System Environment
NVIDIA_VISIBLE_DEVICES=1

# Container Settings
CONTAINER_NAME=batch-faceswap1.5
# CONTAINER_NAME=batch-faceswap1.2

IMAGE_NAME=docker.io/avgradmin/deep-swap:v0.1.10-cuda-11.8'

DOCKERFILE_PATH=docker/Dockerfile.cuda12-2
